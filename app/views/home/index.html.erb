<% if current_user %>
  <h1> Welcome <%=current_user.username%>.</h1>
<% else %>
  <h1> Welcome. Would you like to log in?</h1>
<% end %>

<iframe width="560" height="315" src="//www.youtube.com/embed/ykwqXuMPsoc?rel=0" frameborder="0" allowfullscreen></iframe>

<br>

<% if current_user %>
  <a href = "/logout">Click here to logout.</a>
<% else %>
  <h2>Log In</h2>
  <%= render 'users/loginForm' %>
  <h2>Register</h2>
  <%= render 'users/regForm' %>
<% end %>