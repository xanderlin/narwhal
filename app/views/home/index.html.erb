<div class="main_page">
<% if current_user %>
  <h1> Welcome <%=current_user.username%>.</h1>
<% else %>
  <h1> Welcome. Please log in or register.</h1>
<% end %>

<!-- <div id="youtube_video">
    <iframe width="560" height="315" src="//www.youtube.com/embed/ykwqXuMPsoc?rel=0" frameborder="0" allowfullscreen></iframe>
</div> -->

<% if current_user %>
  <a href = "/logout" class="btn btn-default">Click here to logout.</a>
<% else %>
  <div class="panel panel-primary registerBox">
    <div class="panel-heading">
      <h3 class="panel-title">Log In</h3>
    </div>
    <div class="panel-body">
      <%= render 'users/loginForm' %>
    </div>
  </div>
  <div class="panel panel-success registerBox">
    <div class="panel-heading">
      <h3 class="panel-title">Register</h3>
    </div>
    <div class="panel-body">
      <%= render 'users/regForm' %>
    </div>
  </div>

<% end %>

</div>
