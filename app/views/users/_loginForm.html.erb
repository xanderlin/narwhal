<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <label for="password">Password</label> <br>
  <input id="password" type="password" /><br />

  <div class="field" style="display: none;">
    <%= f.label :random_challenge %><br>
    <%= f.text_area :random_challenge %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= render(:partial=>"users/regscript") %>
