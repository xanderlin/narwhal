<%= form_tag "/challenge", remote: true, id: "login_form" do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= label_tag :username, "Username:" %>
  <%= text_field_tag :username %>

  <br>

  <%= label_tag :username, "Password:" %>
  <input id="password" type="password" />

  <br>

  <%= label_tag :username, "Challenge:" %>
  <%= text_field_tag :random_challenge %>

  <%= submit_tag "Login" %>
<% end %>
