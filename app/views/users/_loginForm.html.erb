<%= form_tag "/challenge", remote: true, id: "login_form" do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="form-group">
    <%= label_tag :username, "Username:", :class=>"control-label" %>
    <%= text_field_tag :username, nil, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :username, "Password:", :class=>"control-label" %>
    <input id="password" type="password" class="form-control" />
  </div>

  <div class="form-group">
    <%= label_tag :username, "Challenge:", :class=>"control-label" %>
    <%= text_field_tag :random_challenge, nil, :class=>"form-control" %>
  </div>
  <%= submit_tag "Login", :class=>'btn btn-primary' %>
<% end %>
